extends layout

block content

    div.container-fluid
        div.row
            div.col-xs-12
                h3 Add a new wordset
        div.row
            div.col-xs-12
                form.form-inline(action="/wordsets/add" method="post")
                    div.form-group
                        input#wordset-name.form-control(type="text" name="name" placeholder="Wordset name")
                    button.btn.btn-primary(type="submit") Add
        div.row
            div.col-xs-12
                h3 Current wordsets
        div.row
            div#wordset-list.col-xs-12
                if data.length > 0
                    - each wordset in data
                        p 
                            = wordset.name
                        p 
                            = wordset.words.length
                else
                    p You have no wordsets.
                    
